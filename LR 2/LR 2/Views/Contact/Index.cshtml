@model LR_2.Models.MessageModel

@{
    ViewBag.Title = "Feedback";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="jumbotron" style="background-color:bisque">
        <div class="container">
            <h1>Отправь письмо Марго!</h1>
            <p>Не упусти свой шанс!</p>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form id="feedback" action="/Contact/Send" method="POST">
                <div class="form">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label" for="AddressInput">Email</label>
                        <input asp-for="Address" id="AddressInput" type="email" class="form-control" placeholder="Введите Ваш email">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Topic" class="control-label" for="TopicInput">Тема</label>
                        <input asp-for="Topic" id="TopicInput" type="text" class="form-control" placeholder="Введите тему">
                        <span asp-validation-for="Topic" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Text" id="TextInput" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default pull-right">Отправить</button>
                </div>
            </form>
            @if (ViewBag.ErrorMessage != null)
            {
                <h1>Ошибки:</h1>
                <div class="alert-info">
                    <p>@Html.Raw(ViewBag.ErrorMessage)</p>
                </div>
            }
            @if (ViewBag.Success != null && ViewBag.Success)
            {
                <div class="alert-success">
                    <p class="text-success">Сообщение успешно доставлено!</p>
                </div>
            }
            <span class="clearfix"></span>
        </div>
        <div class="col-md-5 col-md-offset-1 clearfix">
            <h2>5 причин написать мне:</h2>
            <p><span class="lead">1.Ваша информация в надежном месте.<br />
                (Я не выдам ваших секретов).<br/>
                2. Вы практикуете свою речь.<br />
                3. Мозг дальше остается молодым.<br />
                4. Практика в слепой печати (для продвинутых пользователей ПК).<br />
                5. Абсолютно бесплатно!
                </p>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>